@model  Beanfamily.Models.TopSanPhamNoiBat
@using Beanfamily.Models
@{
    ViewBag.Title = "Sản Phẩm Nổi Bật";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

<div class="pagetitle">
    <div class="row">
        <div class="col-md-7 col-12">
            <h1>Sản Phẩm Nổi Bật</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("index", "dashboard")">Bảng Điều Khiển</a></li>
                    <li class="breadcrumb-item active">Sản Phẩm Nổi Bật</li>
                </ol>
            </nav>
        </div>
        <div class="col-md-5 col-12 text-end">
            @if (Session["chophep-sua"] != null)
            {
                if (Convert.ToBoolean(Session["chophep-sua"]) == true)
                {
                    <button class="btn btn-primary" id="btnSuaSpnbModal"><i class="bi bi-pencil-square me-1"> </i> Chọn sản phẩm</button>
                }
            }
        </div>
    </div>

</div><!-- End Page Title -->
<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <!-- Table with stripped rows -->
                    <table id="lstDataTable" class="table datatable" width="100%" data-order='[[0, "desc"]]'>
                        <thead>
                            <tr class="text-nowrap">
                                <th scope="col">Loại</th>
                                <th scope="col">Mã</th>
                                <th scope="col">Tên Sản Phẩm</th>
                                <th scope="col">Giá</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr style="vertical-align: middle">
                                <td>TĐ Hằng Ngày</td>
                                <td scope="row">SP@(Model.id_thucdon.ToString("D6"))</td>
                                <td data-bs-toggle="tooltip" dropzone="top" title="@Model.SanPhamThucDonHangNgay.mota">@Model.SanPhamThucDonHangNgay.tensanpham</td>
                                <td>@Model.SanPhamThucDonHangNgay.gia.ToString("0,0") đ</td>
                            </tr>
                            <tr style="vertical-align: middle">
                                <td>TĐ Hằng Ngày</td>
                                <td scope="row">SP@(Model.id_thucdon_2.ToString("D6"))</td>
                                <td data-bs-toggle="tooltip" dropzone="top" title="@Model.SanPhamThucDonHangNgay1.mota">@Model.SanPhamThucDonHangNgay1.tensanpham</td>
                                <td>@Model.SanPhamThucDonHangNgay1.gia.ToString("0,0") đ</td>
                            </tr>

                            <tr style="vertical-align: middle">
                                <td>Vườn Rau</td>
                                <td scope="row">SP@(Model.id_vuonrau.ToString("D6"))</td>
                                <td data-bs-toggle="tooltip" dropzone="top" title="@Model.SanPhamRauNhaTrong.mota">@Model.SanPhamRauNhaTrong.tensanpham</td>
                                <td>@Model.SanPhamRauNhaTrong.gia.ToString("0,0") đ</td>
                            </tr>
                            <tr style="vertical-align: middle">
                                <td>Vườn Rau</td>
                                <td scope="row">SP@(Model.id_vuonrau_2.ToString("D6"))</td>
                                <td data-bs-toggle="tooltip" dropzone="top" title="@Model.SanPhamRauNhaTrong1.mota">@Model.SanPhamRauNhaTrong1.tensanpham</td>
                                <td>@Model.SanPhamRauNhaTrong1.gia.ToString("0,0") đ</td>
                            </tr>

                            <tr style="vertical-align: middle">
                                <td>Mua Sắm</td>
                                <td scope="row">SP@(Model.id_muasam.ToString("D6"))</td>
                                <td data-bs-toggle="tooltip" dropzone="top" title="@Model.SanPhamMuaSam.mota">@Model.SanPhamMuaSam.tensanpham</td>
                                <td>
                                    <ul style="margin-left: -2rem; margin-bottom: 0; list-style-type: none;">
                                        @foreach (var tonkho in Model.SanPhamMuaSam.TonKhoSanPhamMuaSam)
                                        {
                                            <li>
                                                @if (tonkho.soluong > 0)
                                                {
                                                    <span>@(tonkho.tenloai) | @(tonkho.gia.ToString("0,0"))đ</span>
                                                }
                                                else
                                                {
                                                    <span>@(tonkho.tenloai) | @(tonkho.gia.ToString("0,0"))đ</span>
                                                }
                                            </li>
                                        }
                                    </ul>
                                </td>
                            </tr>
                            <tr style="vertical-align: middle">
                                <td>Mua Sắm</td>
                                <td scope="row">SP@(Model.id_muasam_2.ToString("D6"))</td>
                                <td data-bs-toggle="tooltip" dropzone="top" title="@Model.SanPhamMuaSam1.mota">@Model.SanPhamMuaSam1.tensanpham</td>
                                <td>
                                    <ul style="margin-left: -2rem; margin-bottom: 0; list-style-type: none;">
                                        @foreach (var tonkho in Model.SanPhamMuaSam1.TonKhoSanPhamMuaSam)
                                        {
                                            <li>
                                                @if (tonkho.soluong > 0)
                                                {
                                                    <span>@(tonkho.tenloai) | @(tonkho.gia.ToString("0,0"))đ</span>
                                                }
                                                else
                                                {
                                                    <span>@(tonkho.tenloai) | @(tonkho.gia.ToString("0,0"))đ</span>
                                                }
                                            </li>
                                        }
                                    </ul>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</section>

@if (Session["chophep-sua"] != null)
{
    if (Convert.ToBoolean(Session["chophep-sua"]) == true)
    {
        <!-- Sửa danh mục -->
        <div class="modal fade" id="SuaSpnbModal" tabindex="-1">
            <div class="modal-dialog  modal-dialog-centered modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 id="TitleSuaSpnbModal" class="modal-title">Cập nhật sản phẩm</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body" id="content-spnb-modal">

                    </div>

                    <div class="modal-footer mt-3">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button id="btnluuSua" type="button" class="btn btn-primary">Lưu thông tin</button>
                    </div>
                </div>
            </div>
        </div>
    }
}
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js?v=1.0"></script>
<script src="~/Validation/SanPhamNoiBat/SuaSanPham.js?v=1.0"></script>