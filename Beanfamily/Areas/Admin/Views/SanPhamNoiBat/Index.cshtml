@model  Beanfamily.Models.TopSanPhamNoiBat
@using Beanfamily.Models
@{
    BeanfamilyEntities models = new BeanfamilyEntities();
    ViewBag.Title = "Sản Phẩm Nổi Bật";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int i = 0;
}

<div class="pagetitle">
    <div class="row">
        <div class="col-md-7 col-12">
            <h1>Sản Phẩm Nổi Bật</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("index", "dashboard")">Bảng Điều Khiển</a></li>
                    <li class="breadcrumb-item active">Sản Phẩm Nổi Bật</li>
                </ol>
            </nav>
        </div>
        <div class="col-md-5 col-12 text-end">
            @if (Session["chophep-sua"] != null)
            {
                if (Convert.ToBoolean(Session["chophep-sua"]) == true)
                {
                    <button class="btn btn-primary" id="btnSuaSpnbModal"><i class="bi bi-pencil-square me-1"> </i> Chọn sản phẩm</button>
                }
            }
        </div>
    </div>

</div><!-- End Page Title -->
<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <!-- Table with stripped rows -->
                    <table id="lstDataTable" class="table datatable" width="100%">
                        <thead>
                            <tr class="text-nowrap">
                                <th scope="col">#</th>
                                <th scope="col">Mã</th>
                                <th scope="col">Tên Sản Phẩm</th>
                                <th scope="col">Giá</th>
                                <th scope="col">View</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.list_id_thucdon.ToString().Split('#').ToList())
                            {
                                i++;
                                int id = Int32.Parse(item);
                                var sp = models.SanPhamThucDonHangNgay.Find(id);

                                <tr style="vertical-align: middle">
                                    <td scope="row">@i</td>
                                    <td scope="row">SP@(sp.id.ToString("D6"))</td>
                                    <td scope="row">
                                        @if (!string.IsNullOrEmpty(sp.hinhanh))
                                        {
                                            <div style="height: 50px; width: 50px; float: left">
                                                <img style="float: left; height: 50px; width: 50px;object-fit: cover; border-radius: 50% " src="@Url.Content(sp.hinhanh.Split('#')[0])" />
                                            </div>
                                        }
                                        <label style="margin-left: 10px; display: inline-block; vertical-align: middle; line-height: 50px ">
                                            @sp.tensanpham
                                        </label>
                                    </td>
                                    <td>@sp.gia.ToString("0,0") đ</td>
                                    <td>@sp.luotxem lượt xem</td>
                                    <td><a target="_blank" class="btn btn-sm btn-primary" href="@Url.Action("ProductDetail", "ThucDonHangNgay", new { area = "", id = sp.id})">Xem trang</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</section>

@if (Session["chophep-sua"] != null)
{
    if (Convert.ToBoolean(Session["chophep-sua"]) == true)
    {
        <!-- Sửa danh mục -->
        <div class="modal fade" id="SuaSpnbModal" tabindex="-1">
            <div class="modal-dialog  modal-dialog-centered modal-dialog-scrollable modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 id="TitleSuaSpnbModal" class="modal-title">Cập nhật sản phẩm
                        <label class="small"><i>(chọn tối thiểu 6 sản phẩm)</i></label></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body" id="content-spnb-modal">

                    </div>

                    <div class="modal-footer mt-3">
                        <label class="font-weight-bold me-3" id="checkbox-dachon"></label>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button id="btnluuSua" type="button" class="btn btn-primary">Lưu thông tin</button>
                    </div>
                </div>
            </div>
        </div>
    }
}
<script src="~/Validation/SanPhamNoiBat/SuaSanPham.js?v=15102025.1"></script>