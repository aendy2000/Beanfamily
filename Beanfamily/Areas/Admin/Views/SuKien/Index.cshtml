@model  IEnumerable<Beanfamily.Models.SuKienBean>
@using Beanfamily.Models
@{
    BeanfamilyEntities models = new BeanfamilyEntities();
    ViewBag.Title = "Tin Tức & Sự Kiện";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int i = 0;
}

<div class="pagetitle">
    <div class="row">
        <div class="col-md-7 col-12">
            <h1>Tin Tức & Sự Kiện</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("index", "dashboard")">Bảng Điều Khiển</a></li>
                    <li class="breadcrumb-item active">Tin Tức & Sự Kiện</li>
                </ol>
            </nav>
        </div>
        <div class="col-md-5 col-12 text-end">
            @if (Session["chophep-them"] != null)
            {
                if (Convert.ToBoolean(Session["chophep-them"]) == true)
                {
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ThemMoiModal"><i class="bi bi-plus-circle me-1"> </i> Thêm mới</button>
                }
            }
            @if (Session["chophep-xoa"] != null)
            {
                if (Convert.ToBoolean(Session["chophep-xoa"]) == true)
                {
                    <button id="xoahangloat" class="btn btn-danger ms-1"><i class="bi bi-trash me-1"> </i> Xóa mục đã chọn</button>
                }
            }
        </div>
    </div>

</div><!-- End Page Title -->
<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <!-- Table with stripped rows -->
                    <table id="lstDataTable" class="table datatable" width="100%">
                        <thead>
                            <tr class="text-nowrap">
                                <th style="width: 10px">
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input p-2" id="checkAlls" />
                                        <label class="form-check-label" for="checkAlls"></label>
                                    </div>
                                </th>
                                <th scope="col">Thời gian</th>
                                <th scope="col">Tiêu đề</th>
                                <th scope="col">Nội dung</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderByDescending(o => o.id).ToList())
                            {
                                i++;
                                <tr id="row-@item.id" style="vertical-align: middle">
                                    <td>
                                        <div class="form-check">
                                            <input type="checkbox" class="form-check-input p-2" id="checkitem@(item.id)" name="@item.id" />
                                            <label class="form-check-label" for="checkitem@(item.id)"></label>
                                        </div>
                                    </td>
                                    <td scope="row">@item.ngaygio.ToString("HH:mm dd/MM/yyyy")</td>
                                    <td>@item.tieude</td>
                                    <td>@item.noidung</td>
                                    
                                    <td>
                                        @if (Session["chophep-xoa"] != null)
                                        {
                                            if (Convert.ToBoolean(Session["chophep-xoa"]) == true)
                                            {
                                                <button id="btnxoa@(item.id)" name="@item.id" tensukien="@item.tieude" class="btn btn-sm btn-danger" data-bs-toggle="tooltip" data-bs-placement="top" title="Xóa sự kiện"><i class="bi bi-trash"></i></button>
                                            }
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</section>

@if (Session["chophep-them"] != null)
{
    if (Convert.ToBoolean(Session["chophep-them"]) == true)
    {
        <!-- Thêm danh mục -->
        <div class="modal fade" id="ThemMoiModal" tabindex="-1">
            <div class="modal-dialog  modal-dialog-centered modal-dialog-scrollable modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Thêm Tin tức - Sự kiện mới</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row m-2">
                            <div class="col-sm-12 col-lg-12">
                                <div class="row mb-3">
                                    <label for="tieude" class="col-md-3 col-lg-3 col-form-label">Hình ảnh sự kiện <span class="text-danger">*</span></label>
                                    <div class="col-md-9 col-lg-9">

                                        <fieldset class="form-group">
                                            <a class="btn btn-sm btn-primary mb-2" onclick="$('#hinhanh_sukien').click()"><i class="bi bi-images me-1"></i> Tải lên hình ảnh</a> <small class="text-muted fst-italic">(Chọn 1 hình ảnh kích thước <b>4:3</b>).</small>
                                            <input accept="image/jpeg, image/png" type="file" id="hinhanh_sukien" name="hinhanh_sukien[]" style="display: none;" class="form-control">
                                        </fieldset>
                                        <div class="preview-images-zone preview-images-zonehinhanh_sukien form-control" style="height: 140px !important">

                                        </div>
                                        <label id="invalid-hinhanh_sukien-feedback" class="text-danger" hidden></label>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="tieude" class="col-md-3 col-lg-3 col-form-label">Tiêu đề <span class="text-danger">*</span></label>
                                    <div class="col-md-9 col-lg-9">
                                        <input id="tieude" type="text" placeholder="Tiêu đề sự kiện" class="form-control">
                                        <label style="margin-left: 5px" id="invalid-tieude-feedback" class="text-danger" hidden></label>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="noidung" class="col-md-3 col-lg-3 col-form-label">Nội dung <span class="text-danger">*</span></label>
                                    <div class="col-md-9 col-lg-9">
                                        <textarea id="noidung" rows="6" type="text" placeholder="Nội dung sự kiện" class="form-control"></textarea>
                                        <label style="margin-left: 5px" id="invalid-noidung-feedback" class="text-danger" hidden></label>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="linkbai" class="col-md-3 col-lg-3 col-form-label">Link bài viết <span class="text-danger">*</span></label>
                                    <div class="col-md-9 col-lg-9">
                                        <input id="linkbai" type="text" placeholder="Link bài viết" class="form-control">
                                        <label style="margin-left: 5px" id="invalid-linkbai-feedback" class="text-danger" hidden></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer mt-3">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button id="btnluuthemmoi" type="button" class="btn btn-primary">Lưu thông tin</button>
                    </div>
                </div>
            </div>
        </div>
    }
}

<script src="~/Scripts/jquery-ui.js?v=15102025.1"></script>
<script src="~/Validation/SuKien/Them.js?v=15102025.1"></script>
<script src="~/Validation/SuKien/Xoa.js?v=15102025.1"></script>
<script src="~/Validation/SuKien/XoaHangLoat.js?v=15102025.1"></script>