@model IEnumerable<Beanfamily.Models.ThongTinCauHinh>
@{
    string googleanalyst = "";
    string googlesearchconsole = "";

    if (Model.Count() > 0)
    {
        var chw = Model.First();
        googleanalyst = chw.googleanalyst;
        googleanalyst = "<!-- Google tag (gtag.js) -->\n"
            + @"<script async src=""https://www.googletagmanager.com/gtag/js?id="""+ googleanalyst + "\"></script>\n"
            + "<script>\n"
            + "\twindow.dataLayer = window.dataLayer || [];\n"
            + "\tfunction gtag() { dataLayer.push(arguments); }\n"
            + "\t" + @"gtag('js', new Date());"
            + "\n\n\t" + @"gtag('config', '" + googleanalyst + "');\n</script>";
        googlesearchconsole = chw.googlesearchconsole;
    }

    ViewBag.Title = "Cấu Hình Website";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="pagetitle">
    <div class="row">
        <div class="col-md-12 col-12">
            <h1>Cấu Hình Web</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("index", "dashboard")">Bảng Điều Khiển</a></li>
                    <li class="breadcrumb-item">Thiết Lập Chung</li>
                    <li class="breadcrumb-item active">Cấu Hình Web</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="row ms-2 me-2 mb-4 mt-4">
                        <label for="googlesearchconsole" class="col-12 col-form-label">Mã xác thực Goole Search Console:</label>
                        <div class="col-12">
                            <input type="text" spellcheck="false" value="@googlesearchconsole" style="border: 2px solid var(--bs-primary) !important" id="googlesearchconsole" class="form-control" />
                        </div>
                        <small class="mt-2 mb-2 text-danger">Chỉ nhập mã được bôi đen như hình:</small>
                        <div class="col-12" style="display: flex; flex-direction:column; justify-content: center; align-items: center;">
                            <img src="~/Content/AdminAreas/assets/img/ggsearch.png" style="width: 60%; height: fit-content;border: 1px solid #808080"  />
                        </div>
                    </div>
                    <hr />
                    <div class="row  ms-2 me-2 mb-4 ">
                        <label for="googleanalyst" class="col-12 col-form-label">Mã theo dõi Google Analyst:</label>
                        <div class="col-12">
                            <textarea type="text" spellcheck="false" style="border: 2px solid var(--bs-primary) !important; font-family: monospace" id="googleanalyst" class="form-control  form-control-sm" rows="10">@googleanalyst</textarea>
                        </div>
                        <small class="mt-2 mb-2 text-danger">Nhập toàn bộ mã sao chép được như hình:</small>
                        <div class="col-12" style="display: flex; flex-direction:column; justify-content: center; align-items: center;">
                            <img src="~/Content/AdminAreas/assets/img/analyst.png" style="width: 60%; height: fit-content; border: 1px solid #808080" />
                        </div>
                    </div>
                    <div class="row ms-2 me-2 mb-3" style="display: flex; justify-content: end;">
                        <button style="width: 200px; height: 40px; margin-right: .5rem;" id="btnLuuThongTin" type="button" class="btn btn-primary mt-2">Lưu thông tin</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/Validation/CauHinhWeb/Update.js"></script>