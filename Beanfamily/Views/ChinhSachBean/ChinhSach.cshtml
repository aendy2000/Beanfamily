@model Beanfamily.Models.ChinhSachBean
@{
    string banner_gioithieu = "~/Content/AdminAreas/images/NoiDungTinh/GioiThieu/Banner/2z5708932492674_1e339065fc38b483bc79e1c28d01086f.jpg";
    ViewBag.Title = "Chính Sách";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<link href="~/Content/assets/vendor/Quill/quill.snow.css" rel="stylesheet" />
<link href="~/Content/assets/vendor/Quill/atom-one-dark.min.css" rel="stylesheet" />
<script src="~/Content/assets/vendor/Quill/highlight.min.js"></script>
<section style="background-repeat: no-repeat; background-position: center 0; background-size: cover; background-image: url(@Url.Content(banner_gioithieu));">
    <div class="flex-c-m" style="background-image: linear-gradient(180deg, #00000000 0%, #122E26 100%); width: 100%; min-height: 345px; padding-left: 15px; padding-right: 15px; background-repeat: no-repeat; background-position: center 0; background-size: cover; ">
        <div>
            <h2 class="tit6 t-center">
                @Model.tenchinhsach.ToUpper()
            </h2>
            <h6 class="t-center text-white mt-2">
                <a class="text-white text-decoration-underline" href="@Url.Action("index", "home")">TRANG CHỦ</a>
                <label class="ms-2 me-2">/</label>
                <a>CHÍNH SÁCH</a>
                <label class="ms-2 me-2">/</label>
                <a>@Model.tenchinhsach.ToUpper()</a>
            </h6>
        </div>
    </div>
</section>
<style>
    strong, blockquote, span {
        color: white;
    }
</style>
<section class="section-ourmenu bg1-pattern">
    <div class="section-child-bg1">
        <div class="container p-b-80">
            <div class="row" style="padding-top:60px; display: flex; flex-direction: row; align-items: center">
                <div class="col-md-12 col-sm-12">
                    <div id="content-div-cs">
                        @Html.Raw(Model.noidung)
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

