<section class="section-ourmenu bg1-pattern">
    <div class="header-intro parallax100 t-center p-t-80 p-b-80"
         style="background-image: url(&quot;/Content/assets/images/ImageBean/bannerlabel2.jpg&quot;); background-position: center -40.3333px;">
        <h4 class="txt5 color0-hov trans-0-4 m-b-13">
            Ống kính thời gian
        </h4>
        <h3 class="tit4 t-center p-l-15 p-r-15 p-t-3">
            Video Clip Bean Family
        </h3>
    </div>

    @if (!string.IsNullOrEmpty(video_trangchu))
    {
        <div class="section-child-bg1">
            <div class="container p-t-80 p-b-40">

                <p style="font-size: 16px; max-width: 1200px" class="text-white mb-5 t-center">
                    @mota_video_trangchu
                </p>
                <div class="w-100">
                    <div class="d-flex flex-column flex-md-row">
                        <div class="main-video-col mb-4" style="flex: 1; min-width: 0;">
                            <div class="slider-video-for">
                                @foreach (var item in video_trangchu.Split('#').ToList())
                                {
                                    var cleanUrl = item.Split('&')[0];
                                    var embedUrl = cleanUrl.Replace("watch?v=", "embed/") + "?enablejsapi=1&rel=0";
                                    <div class="slickSlider">
                                        <div class="video-aspect-ratio" style="position: relative; padding-bottom: 56.25%; height: 0; overflow: hidden;">
                                            <iframe style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;"
                                                    src="@embedUrl" frameborder="0"
                                                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
                                            </iframe>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="vertical-nav-col">
                            <div class="slider-video-nav">
                                @foreach (var item in video_trangchu.Split('#').ToList())
                                {
                                    var videoId = item.Split(new[] { "v=" }, StringSplitOptions.None).LastOrDefault()?.Split('&')[0];
                                    var thumbnailUrl = $"https://img.youtube.com/vi/{videoId}/mqdefault.jpg";
                                    <div class="slickSlider p-2">
                                        <a style="cursor: pointer; display: block;" class="item-thumb">
                                            <img style="object-fit: cover; width: 100%; aspect-ratio: 16 / 9;" class="thumb-img" src="@thumbnailUrl" />
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <script>
                        $(document).ready(function () {
                            var sliderFor = $('.slider-video-for');
                            var sliderNav = $('.slider-video-nav');
                            var players = {};

                            // SỬA 2: Hàm đồng bộ chiều cao để sửa lỗi vỡ màn hình
                            function syncSliderHeights() {
                                // Chỉ thực hiện trên màn hình lớn (desktop)
                                if (window.innerWidth >= 768) {
                                    var mainVideoHeight = sliderFor.height();
                                    if (mainVideoHeight > 0) {
                                        sliderNav.height(mainVideoHeight);
                                    }
                                } else {
                                    // Trên mobile, trả lại chiều cao tự động
                                    sliderNav.height('auto');
                                }
                            }

                            var tag = document.createElement('script');
                            tag.src = "https://www.youtube.com/iframe_api";
                            var firstScriptTag = document.getElementsByTagName('script')[0];
                            firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);

                            window.onYouTubeIframeAPIReady = function () {
                                sliderFor.find('iframe').each(function (index, iframe) {
                                    var iframeId = 'player-' + index;
                                    iframe.id = iframeId;
                                    players[iframeId] = new YT.Player(iframeId, {
                                        events: { 'onReady': onPlayerReady }
                                    });
                                });

                                // Cấu hình cho slider video chính (giữ nguyên)
                                sliderFor.slick({
                                    slidesToShow: 1,
                                    slidesToScroll: 1,
                                    arrows: false,
                                    fade: true,
                                    asNavFor: '.slider-video-nav'
                                });

                                // Cấu hình cho slider menu dọc (đã chỉnh sửa)
                                sliderNav.slick({
                                    slidesToShow: 7,
                                    slidesToScroll: 1,
                                    asNavFor: '.slider-video-for',
                                    dots: false,
                                    arrows: false,
                                    vertical: true, // Chế độ dọc
                                    verticalSwiping: true,
                                    focusOnSelect: true,
                                    responsive: [
                                        {
                                            breakpoint: 768,
                                            settings: {
                                                vertical: false, // Trở về trượt ngang trên mobile
                                                verticalSwiping: false,
                                                slidesToShow: 4,
                                            }
                                        }
                                    ]
                                });

                                // Gọi hàm đồng bộ chiều cao sau khi slick khởi tạo xong
                                syncSliderHeights();

                                // Gọi lại hàm khi thay đổi kích thước cửa sổ
                                $(window).on('resize', syncSliderHeights);

                            };

                            function onPlayerReady(event) {
                                // event.target.playVideo(); // Xóa // nếu muốn tự động phát video ĐẦU TIÊN
                            }

                            // Dừng video cũ trước khi chuyển slide (giữ nguyên)
                            sliderFor.on('beforeChange', function (event, slick, currentSlide, nextSlide) {
                                var currentIframe = $(slick.$slides[currentSlide]).find('iframe');
                                if (currentIframe.length) {
                                    var currentPlayer = players[currentIframe.attr('id')];
                                    if (currentPlayer && typeof currentPlayer.pauseVideo === 'function') {
                                        currentPlayer.pauseVideo();
                                    }
                                }
                            });

                            // Tự động phát video mới sau khi chuyển (giữ nguyên)
                            sliderFor.on('afterChange', function (event, slick, currentSlide) {
                                var currentIframe = $(slick.$slides[currentSlide]).find('iframe');
                                if (currentIframe.length) {
                                    var currentPlayer = players[currentIframe.attr('id')];
                                    if (currentPlayer && typeof currentPlayer.playVideo === 'function') {
                                        currentPlayer.playVideo();
                                    }
                                }
                            });
                        });
                    </script>
                </div>
            </div>
        </div>
    }
</section>

