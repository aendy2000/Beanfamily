                    <div class="slider-video-for" style="margin: 0 -5px 0 -5px ">
                        @foreach (var item in video_trangchu.Split('#').ToList())
                        {
                            // --- PHẦN SỬA ĐỔI QUAN TRỌNG ---
                            // 1. Lấy phần URL chính, loại bỏ các tham số thừa như &list=...
                            var cleanUrl = item.Split('&')[0];

                            // 2. Tạo URL embed hoàn chỉnh với cú pháp ĐÚNG
                            var embedUrl = cleanUrl.Replace("watch?v=", "embed/") + "?enablejsapi=1&rel=0";
                            // --- KẾT THÚC SỬA ĐỔI ---

                            <div class="slickSlider">
                                <div style="border-radius: 16px; border: 2px solid #ffc678; position: relative; padding-bottom: 56.25%; height: 0;" class="rounded-4 mb-3">
                                    <iframe style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; border-radius: 16px;"
                                            src="@embedUrl"
                                            frameborder="0"
                                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                            allowfullscreen>
                                    </iframe>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="ms-1 me-1 mb-3 slider-video-nav p-l-20 p-r-20">
                        @foreach (var item in video_trangchu.Split('#').ToList())
                        {
                            // --- PHẦN SỬA ĐỔI ---
                            // 1. Lấy video ID từ URL đầy đủ
                            var videoId = item.Split(new[] { "v=" }, StringSplitOptions.None).LastOrDefault();
                            if (videoId != null && videoId.Contains("&"))
                            {
                                videoId = videoId.Split('&')[0];
                            }

                            // 2. Tạo URL thumbnail từ video ID
                            var thumbnailUrl = $"https://img.youtube.com/vi/{videoId}/mqdefault.jpg";
                            // --- KẾT THÚC SỬA ĐỔI ---

                            <div class="slickSlider">
                                <a style="cursor: pointer;" class="mx-1 item-thumb">
                                    @* Sử dụng thumbnailUrl vừa tạo *@
                                    <img style="object-fit: cover; border-radius: 8px;" width="100" height="80" class="" src="@thumbnailUrl" />
                                </a>
                            </div>
                        }
                    </div>
                    <script>
                        $(document).ready(function () {
                            var sliderFor = $('.slider-video-for');
                            var sliderNav = $('.slider-video-nav');
                            var players = {}; // Dùng object để quản lý player tốt hơn

                            // 1. Tải API YouTube Iframe Player
                            var tag = document.createElement('script');
                            tag.src = "https://www.youtube.com/iframe_api";
                            var firstScriptTag = document.getElementsByTagName('script')[0];
                            firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);

                            // 2. Hàm này được gọi tự động khi API YouTube đã sẵn sàng
                            window.onYouTubeIframeAPIReady = function () {
                                // Gán ID duy nhất cho mỗi iframe để YT Player có thể nhận diện
                                sliderFor.find('iframe').each(function (index, iframe) {
                                    var iframeId = 'player-' + index;
                                    iframe.id = iframeId;
                                    players[iframeId] = new YT.Player(iframeId, {
                                        events: { 'onReady': onPlayerReady }
                                    });
                                });

