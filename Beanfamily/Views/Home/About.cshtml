    BeanfamilyEntities models = new BeanfamilyEntities();

    string diachi = "";
    string toado = "";

    var tt = models.ThongTinCauHinh.ToList();
    if (tt.Count > 0)
    {
        var tts = tt.First();
        diachi = tts.diachi;
        toado = tts.toadogooglemapiframe;
    }

    string banner_gioithieu = "";
    string tieude_gioithieu = "";
    string hinhanh1_gioithieu = "";
    string hinhanh2_gioithieu = "";

    string mota_thanhphanchinh_nhahang = "";
    string mota_thanhphanchinh_vuonrau = "";
    string mota_thanhphanchinh_muasam = "";

    string tieude2_gioithieu = "";
    string mota_gioithieu = "";
    string hinhanh_mota_gioithieu = "";
    var ndt = models.BoCucNoiDungTinhWebsite.ToList();
    if (ndt.Count > 0)
    {
        var dndt = ndt.First();
        banner_gioithieu = dndt.banner_gioithieu;
        tieude_gioithieu = dndt.tieude_gioithieu;
        hinhanh1_gioithieu = dndt.hinhanh1_gioithieu;
        hinhanh2_gioithieu = dndt.hinhanh2_gioithieu;

        mota_thanhphanchinh_nhahang = dndt.mota_thanhphanchinh_nhahang;
        mota_thanhphanchinh_vuonrau = dndt.mota_thanhphanchinh_vuonrau;
        mota_thanhphanchinh_muasam = dndt.mota_thanhphanchinh_muasam;

        tieude2_gioithieu = dndt.tieude2_gioithieu;
        mota_gioithieu = dndt.mota_gioithieu;
        hinhanh_mota_gioithieu = dndt.hinhanh_mota_gioithieu;
    }

    if (string.IsNullOrEmpty(banner_gioithieu))
    {
        banner_gioithieu = "~/Content/AdminAreas/images/NoiDungTinh/GioiThieu/Banner/2z5708932492674_1e339065fc38b483bc79e1c28d01086f.jpg";
    }

    ViewBag.Title = "Giới Thiệu";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
