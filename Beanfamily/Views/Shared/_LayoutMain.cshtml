    <script type="text/javascript" src="~/Content/assets/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script type="text/javascript" src="~/Content/assets/vendor/bootstrap/js/popper.js"></script>
    @*<script type="text/javascript" src="~/Content/assets/vendor/bootstrap/js/bootstrap.min.js"></script>*@
