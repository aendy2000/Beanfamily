    <!--===============================================================================================-->
    <script type="text/javascript" src="~/Content/assets/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script type="text/javascript" src="~/Content/assets/vendor/daterangepicker/moment.min.js"></script>
    <script type="text/javascript" src="~/Content/assets/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script type="text/javascript" src="~/Content/assets/vendor/slick/slick.min.js"></script>
    <script type="text/javascript" src="~/Content/assets/js/slick-custom.js"></script>
